import model.jugadores.*
import model.equiposDeQuidditch.Equipo

describe "Habilidad de un equipo de Quidditch" {

	test "Puedo conocer la habilidad total de un equipo" {
		const jugadores = [
			new Cazador(fuerza = 5, punteria = 2),
			new Buscador(vision = 4, reflejos = 3),
			new Golpeador(punteria = 3, fuerza = 5),
			new Guardian(reflejos = 8)
		]
		const equipo = new Equipo(integrantes = jugadores)
		assert.equals(54, equipo.habilidadTotal())
	}
	
	test "Un equipo es mejor que otro si su habilidad total es mayor" {
		const jugadores = [new Cazador(fuerza = 5, punteria = 2)]
		const equipo = new Equipo(integrantes = jugadores)
		const otroEquipo = new Equipo()
		assert.that(equipo.esMejorQue(otroEquipo))
	}
	
	test "Un equipo es peor que otro si su habilidad total es menor" {
		const jugadores = [new Cazador(fuerza = 5, punteria = 2)]
		const equipo = new Equipo()
		const otroEquipo = new Equipo(integrantes = jugadores)
		assert.notThat(equipo.esMejorQue(otroEquipo))
	}
	
	test "Obtener al m√°s habilidoso de un equipo que tiene jugadores" {
		const habilidoso = new Cazador(fuerza = 5, punteria = 2)
		const jugadores = [
			new Buscador(vision = 1, reflejos = 1),
			new Cazador(fuerza = 1, punteria = 2),
			habilidoso,
			new Golpeador(punteria = 3, fuerza = 2),
			new Guardian(reflejos = 2)
		]
		const equipo = new Equipo(integrantes = jugadores)
		assert.equals(habilidoso, equipo.masHabilidoso())
	}
}